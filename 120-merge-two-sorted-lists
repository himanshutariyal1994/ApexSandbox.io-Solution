public static List<Integer> mergeLists(List<Integer> list1, List<Integer> list2){
    List<Integer> mergedList = new List<Integer>();

    Integer firstCurr = 0;
    Integer secondCurr = 0;
    Integer firstListSize = list1.size() - 1;
    Integer secondListSize = list2.size() - 1;

    while(firstCurr < firstListSize && secondCurr < secondListSize) {
        if(list1[firstCurr] < list2[secondCurr]) {
            mergedList.add(list1[firstCurr++]);
        } else {
            mergedList.add(list2[secondCurr++]);
        }
    }

    while(firstCurr < firstListSize)
        mergedList.add(list1[firstCurr++]);
    }

    while(secondCurr < secondListSize)
        mergedList.add(list2[secondCurr++]);
    }

    return mergedList;
}